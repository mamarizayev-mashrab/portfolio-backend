# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/portfolio

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# Admin Credentials (for seeding)
ADMIN_EMAIL=admin@portfolio.com
ADMIN_PASSWORD=Admin@123456

# SMTP Configuration (for contact form notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Email to receive contact notifications
NOTIFY_EMAIL=your_email@gmail.com

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Render Configuration (for keep-alive in production)
# This is automatically set by Render, but you can set it manually for testing
# RENDER_EXTERNAL_URL=https://your-app.onrender.com
